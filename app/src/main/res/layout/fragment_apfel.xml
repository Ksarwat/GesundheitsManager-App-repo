<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/apfel"
            android:contentDescription="Apfel Bild"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apfel"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enthält: Vitamin C, Ballaststoffe, Antioxidantien."
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weitere Infos:\n- Unterstützt das Immunsystem\n- Fördert die Zahngesundheit\n- Kann das Risiko für Herzkrankheiten senken\n- Gut für die Verdauung (Pektin)"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
