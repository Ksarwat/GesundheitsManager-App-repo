<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <Button
            android:id="@+id/button_aspirin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aspirin"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/button_ibuprofen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ibuprofen"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/button_paracetamol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paracetamol"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/button_amoxicillin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amoxicillin"
            android:layout_marginBottom="16dp"/>
        <Button
            android:id="@+id/button_lisinopril"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lisinopril"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
