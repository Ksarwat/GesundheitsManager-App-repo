<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="24dp"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_outline_purple"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/aspirin"
                android:contentDescription="Aspirin" />
            <Button
                android:id="@+id/button_aspirin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aspirin"
                android:background="@android:color/white"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_outline_purple"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ibuprofen"
                android:contentDescription="Ibuprofen" />
            <Button
                android:id="@+id/button_ibuprofen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ibuprofen"
                android:background="@android:color/white"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_outline_purple"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/paracetamol"
                android:contentDescription="Paracetamol" />
            <Button
                android:id="@+id/button_paracetamol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:background="@android:color/white"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_outline_purple"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/amoxicillin"
                android:contentDescription="Amoxicillin" />
            <Button
                android:id="@+id/button_amoxicillin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amoxicillin"
                android:background="@android:color/white"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/button_outline_purple"
            android:gravity="center">
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/lisinopril"
                android:contentDescription="Lisinopril" />
            <Button
                android:id="@+id/button_lisinopril"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lisinopril"
                android:background="@android:color/white"
                android:textColor="@color/white" />
        </LinearLayout>
    </GridLayout>
</ScrollView>
