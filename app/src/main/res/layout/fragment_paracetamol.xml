<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/paracetamol"
            android:contentDescription="Paracetamol Bild"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paracetamol"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wirkstoff: Paracetamol\nAnwendung: Schmerzmittel, Fiebersenker\nTypische Dosierung: 500 mg Tablette\n\nWeitere Infos:\n- Gut verträglich, auch für Kinder geeignet\n- Nicht überdosieren (Lebergefahr)\n- Lindert Kopf-, Zahn- und Gliederschmerzen\n- Nebenwirkungen selten, aber möglich\n- Bild dient nur zur Illustration."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
