<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/wassermelone"
            android:contentDescription="Wassermelone Bild"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wassermelone"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enthält: Wasser, Vitamin C, Vitamin A, Lycopin."
            android:textSize="18sp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weitere Infos:\n- Sehr kalorienarm\n- Wirkt erfrischend und hydrierend\n- Lycopin kann das Risiko für bestimmte Krebsarten senken\n- Gut für die Hautgesundheit"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
