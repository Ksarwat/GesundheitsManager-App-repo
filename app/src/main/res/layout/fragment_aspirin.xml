<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/aspirin"
            android:contentDescription="Aspirin Bild"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aspirin (Acetylsalicylsäure)"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wirkstoff: Acetylsalicylsäure\nAnwendung: Schmerzmittel, Fiebersenker, Entzündungshemmer\nTypische Dosierung: 500 mg Tablette\n\nWeitere Infos:\n- Lindert Kopfschmerzen, Zahnschmerzen, Muskelschmerzen\n- Kann das Risiko für Herzinfarkt senken (in niedriger Dosierung)\n- Nicht für Kinder unter 12 Jahren geeignet\n- Nebenwirkungen: Magenbeschwerden, Blutungsrisiko\n- Nicht einnehmen bei Allergie gegen Salicylate\n- Bild dient nur zur Illustration."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
