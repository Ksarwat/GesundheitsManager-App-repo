<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:id="@+id/imageGesundheit"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/gesundheit"
        android:contentDescription="Gesundheit Bild"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Willkommen zur GesundheitsManager App!\n\nMit dieser App kÃ¶nnen Sie Ihre medizinischen Erinnerungen und Arzttermine einfach verwalten. Bleiben Sie organisiert und gesund!"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonWeiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weiter"
        android:layout_gravity="center"
        android:layout_marginTop="32dp" />

</LinearLayout>
