<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/lisinopril"
            android:contentDescription="Lisinopril Bild"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lisinopril"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wirkstoff: Lisinopril\nAnwendung: Blutdrucksenker (ACE-Hemmer)\nTypische Dosierung: 5-20 mg Tablette\n\nWeitere Infos:\n- Behandlung von Bluthochdruck und Herzinsuffizienz\n- Nur auf ärztliche Anweisung einnehmen\n- Nebenwirkungen: Husten, Schwindel, Kopfschmerzen\n- Nicht während der Schwangerschaft einnehmen\n- Bild dient nur zur Illustration."
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</ScrollView>
