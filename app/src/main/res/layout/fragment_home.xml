<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="22sp"
        android:text="Willkommen im GesundheitsManager!"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonErnaehrung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ErnÃ¤hrung"
        app:layout_constraintTop_toBottomOf="@id/text_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonNotizen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notizen"
        app:layout_constraintTop_toBottomOf="@id/buttonErnaehrung"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonFitness"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fitness Tracker"
        app:layout_constraintTop_toBottomOf="@id/buttonNotizen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonMedikamente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medikamente"
        app:layout_constraintTop_toBottomOf="@id/buttonFitness"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonNotfallkontakte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Notfallkontakte"
        app:layout_constraintTop_toBottomOf="@id/buttonMedikamente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>